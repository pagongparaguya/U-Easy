<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bground" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Service Type:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/service"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:background="@drawable/gray2_button" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pick-up Location:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/location"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:entries="@array/loc"
            android:background="@drawable/gray2_button" />

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pick-up Date:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:background="@drawable/gray2_button"
            android:layout_height="@dimen/form_height"
            android:id="@+id/pud"
            android:onClick="setDate"
            android:layout_width="fill_parent"/>
    
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pick-up Time:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:background="@drawable/gray2_button"
            android:layout_height="@dimen/form_height"
            android:id="@+id/put"
            android:onClick="setDate1"
            android:layout_width="fill_parent"/>
    
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Number of Days:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:background="@drawable/gray2_button"
            android:layout_height="@dimen/form_height"
            android:id="@+id/numDays"
            android:layout_width="fill_parent"/>
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Return Date:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:background="@drawable/gray2_button"
            android:layout_height="@dimen/form_height"
            android:id="@+id/rDate"
            android:layout_width="fill_parent"/>
    
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Return Time:"
            android:textSize="@dimen/form_textSize"        
      		android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:background="@drawable/gray2_button"
            android:layout_height="@dimen/form_height"
            android:id="@+id/rTime"
            android:layout_width="fill_parent"/>
        
        <Button 
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/form_height"
            android:background="@drawable/green_button"
            android:text="Submit Reservation"
            android:id="@+id/rentSubmit"/>
        <Button 
            android:layout_marginTop="3dp"
            android:layout_width="fill_parent"
            android:textColor="@color/white"
            android:layout_height="@dimen/form_height"
            android:background="@drawable/red_button"
            android:text="Cancel Reservation"
            android:id="@+id/rentCancel"/>
    </LinearLayout>
</ScrollView>